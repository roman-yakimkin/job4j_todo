<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Simple To-Do application</display-name>

  <servlet>
    <servlet-name>ItemServlet</servlet-name>
    <servlet-class>ru.job4j.todo.servlet.ItemServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ItemServlet</servlet-name>
    <url-pattern>/item.do/*</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>IndexFilter</filter-name>
    <filter-class>ru.job4j.todo.filter.IndexFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>IndexFilter</filter-name>
    <url-pattern>/index.jsp</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>ItemFilter</filter-name>
    <filter-class>ru.job4j.todo.filter.ItemFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ItemFilter</filter-name>
    <url-pattern>/item.do/*</url-pattern>
  </filter-mapping>

</web-app>
